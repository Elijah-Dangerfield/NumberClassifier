<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.dangerfield.numberclassifier.paint.PaintView
            android:id="@+id/paintView"
            android:layout_width="match_parent"
            android:layout_height="471dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/paintView" android:onClick="clearPaintView"
            app:layout_constraintHorizontal_bias="0.915"/>
    <Button
            android:text="Detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_detect" app:layout_constraintStart_toStartOf="@+id/btn_clear"
            app:layout_constraintEnd_toEndOf="@+id/btn_clear" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear" android:onClick="onDetectClicked"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_result" android:textStyle="bold"
            android:textSize="18sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_clear"
            android:layout_marginRight="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/paintView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.512" tools:text="digit"/>


</androidx.constraintlayout.widget.ConstraintLayout>









